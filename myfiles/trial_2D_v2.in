dimension  3
units      si
boundary   p p p
# atom_style atomic
atom_style sphere

lattice fcc 5
region		mytube block 0 1 0 10 -0.1 0.1
create_box 1 mytube
create_atoms 1 region mytube

create_atoms 2 region mytube
# mass 2 19.948

pair_style lj/cut 10
pair_coeff 1 1 0.01006418 3.3952

minimize 1e-20 1e-20 10000 10000

timestep 0.001

velocity all create 400 102939 dist gaussian mom yes rot yes

# fix 		1 all enforce2d
fix 1 all nve

dump dump_1 all custom 2 trial_v2.dump id type x y z
thermo_style custom step time temp pe ke etotal press vol

thermo 100
run 50

undump dump_1
unfix 1






